<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sehatq_nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.gilangarinata.sehatqecommerce.ui.fragments.HomeFragment"
        android:label="HomeFragment">
        <action
            android:id="@+id/action_homeFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_homeFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.gilangarinata.sehatqecommerce.ui.fragments.SearchFragment"
        android:label="SearchFragment">
        <action
            android:id="@+id/action_searchFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.gilangarinata.sehatqecommerce.ui.fragments.DetailFragment"
        android:label="DetailFragment">
        <argument
            android:name="product"
            app:argType="com.gilangarinata.sehatqecommerce.models.ProductPromo" />
    </fragment>
    <fragment
        android:id="@+id/purchaseFragment"
        android:name="com.gilangarinata.sehatqecommerce.ui.fragments.PurchaseFragment"
        android:label="PurchaseFragment">
        <action
            android:id="@+id/action_purchaseFragment2_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <activity
        android:id="@+id/loginActivity"
        android:name="com.gilangarinata.sehatqecommerce.ui.LoginActivity"
        android:label="activity_login"
        tools:layout="@layout/activity_login" />
</navigation>